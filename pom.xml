					<artifactId>aspectj-maven-plugin</artifactId>
					<version>1.4</version>
					<configuration>
						<executions>
							<execution>
								<goals>
									<goal>compile</goal>
								</goals>
							</execution>
						</executions>
						<showWeaveInfo>false</showWeaveInfo>
						<verbose>true</verbose>
						<outxml>true</outxml>
						<source>${jdk.version}</source>
						<target>${jdk.version}</target>
					</configuration>
					<dependencies>
