					<version>${surefire.version}</version>
					<configuration>
						<runOrder>alphabetical</runOrder>
						<argLine>-Xmx256m</argLine>
					</configuration>
					<executions>
						<execution>
							<id>surefire-test</id>
							<phase>test</phase>
							<goals>
								<goal>test</goal>
							</goals>
							<configuration>
								<skip>false</skip>
								<excludes>
									<exclude>**/*$*.class</exclude>
								</excludes>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
